<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

	<OCD name="HTTP Proxy" id="ddf.platform.proxy.http.properties">
		<AD
			description="Port of the proxy server"
			name="Proxy Port" id="proxyPort" required="true" type="String" 
			default="8888" 
		/>
		
		<AD
			description="Target host which the request will be forwarded to (targetedsite.com)"
			name="Target Host" id="targetHost" required="true" type="String" 
			default="" 
		/>
		
        <AD
            description="Port of targeted host. (80)"
            name="Target Port" id="targetPort" required="true" type="String"
            default=""
        />

	    </OCD>

	<Designate 	pid="ddf.platform.proxy.http.properties"
				factoryPid="ddf.platform.proxy.http.properties">
		<Object ocdref="ddf.platform.proxy.http.properties" />
	</Designate>

</metatype:MetaData>